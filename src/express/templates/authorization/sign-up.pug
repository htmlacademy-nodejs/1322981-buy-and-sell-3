extends ../blocks/layout.pug
block main
  section.sign-up
    form(action="#" method="post" enctype="multipart/form-data" autocomplete="off").sign-up__form.form
      .sign-up__title
        h2 Регистрация
        a(href="login.html").sign-up__link Вход
      .sign-up__avatar-container.js-preview-container
        .sign-up__avatar.js-preview
          .sign-up__field-avatar
            input(type="file" id="avatar" name="avatar").visually-hidden.js-file-field
            label(for="avatar")
              span.sign-up__text-upload Загрузить аватар…
              span.sign-up__text-another Загрузить другой аватар…
      .form__field.sign-up__field
        input(type="text" name="user-name" id="user-name" required="").js-field
        label(for="user-name") Имя и фамилия
        span Обязательное поле
      .form__field.sign-up__field
        input(type="email" name="user-email" id="user-email" required="").js-field
        label(for="user-email") Эл. почта
        span Обязательное поле
      .form__field.sign-up__field
        input(type="password" name="user-password" id="user-password" required="").js-field
        label(for="user-password") Пароль
        span Обязательное поле
      .form__field.sign-up__field
        input(type="password" name="user-password-again" id="user-password-again" required="").js-field
        label(for="user-password-again") Пароль еще раз
        span Обязательное поле
      button(type="submit" disabled="").sign-up__button.btn.btn--medium.js-button Создать аккаунт
